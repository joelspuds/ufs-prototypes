{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = '' %}
{% set pageTitle = 'Overview' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set allCouncils = allCouncils %}
{% set backLinkContents =  [{url:'/prototypes/molecules', text:'Back to molecules'}] %}
{% set isAdminUser = false %}

{% block content %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Overview') }}

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="main-content">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-full') %}

                <div class="overview-items">
                    <div class="columns">
                        <div class="column is-full">
                            {{ components.captionHeading(text='In progress', tag='h2', size='s', extraClass='overview-items__heading') }}
                        </div>
                    </div>
                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-8">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Recovery strategies from pollution in freshwater ecosystems</a><br>
                                <span class="govuk-!-font-size-16">
                                    Application number: 204<br>
                                    Opportunity: Freshwater ecology Part III, Where have all the invertebrates gone?
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta">
                                    <span class="govuk-!-font-size-24">24</span>
                                    <br> days left<br>
                                    Deadline 14 May
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">50% complete</span>
                                </span>
                            </div>

                        </div>
                    </div>

                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-8">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Viral pandemic: distributed societal issues and news shaping</a><br>
                                <span class="govuk-!-font-size-16">
                                    Application number: 188<br>
                                    Opportunity: Public health and positive political messaging
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--danger">
                                        <span class="govuk-!-font-size-24">2</span><br> days left<br>
                                    Deadline 19 April
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right overview-item__meta--success u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">Ready to submit</span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-8">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Quick turnaround manufacturing techniques using lasers and 3D printers</a><br>
                                <span class="govuk-!-font-size-16">
                                    Application number: 219<br>
                                    Opportunity: Pandemic response strategies: Part I, PPE manufacture
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--danger">
                                    <span class="govuk-!-font-size-24">6</span><br> days left<br>
                                Deadline 23 April
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">95% complete</span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
           {%- endcall %}
        {%- endcall %}


        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-full') %}

                <div class="overview-items">
                    <div class="columns">
                        <div class="column is-full">
                            {{ components.captionHeading(text='Submitted', tag='h2', size='s', extraClass='overview-items__heading') }}
                        </div>
                    </div>
                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-10">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Remote learning strategies for isolated teams</a><br>
                                <span class="govuk-!-font-size-16">
                                    Application number: 225<br>
                                    Opportunity: New generation thinkers
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">Awaiting decision</span>
                                </span>
                            </div>

                        </div>
                    </div>

                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-10">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Distributed computational systems in unmanned aircraft</a><br>
                                <span class="govuk-!-font-size-16">
                                    Application number: 195<br>
                                    Opportunity: Unmanned flight Part II: Control systems for swarming
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right overview-item__meta--success u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">Awarded</span>
                                </span>
                            </div>
                        </div>
                    </div>


                </div>
            {%- endcall %}
        {%- endcall %}

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-full') %}

                <div class="overview-items">
                    <div class="columns">
                        <div class="column is-full">
                            {{ components.captionHeading(text='Minor alternatives', tag='h2', size='s', extraClass='overview-items__heading') }}
                        </div>
                    </div>
                    <div class="overview-item">
                        <div class="columns">
                            <div class="column is-8">
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">Another slightly gloomy dystopian project name</a><br>
                                <span class="govuk-!-font-size-16">
                                    <strong>Application number:</strong> 199<br>
                                    <strong>Opportunity:</strong> Science for our age, part II<br>
                                    <strong>Funder:</strong> AHRC<br>
                                </span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta u-align-setup-vertical u-align-center"><span class="u-align-cell u-align-center">Submitted on 21 March 2020</span></span>
                            </div>
                            <div class="column is-2">
                                <span class="overview-item__meta overview-item__meta--right u-align-setup-vertical u-align-center">
                                    <span class="u-align-cell u-align-center">Awaiting decision</span>
                                </span>
                            </div>

                        </div>
                    </div>




                </div>
            {%- endcall %}
        {%- endcall %}
    </section>

{% endblock %}

