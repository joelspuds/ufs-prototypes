{% extends 'layouts/bulma-ufs.layout.njk' %}
{% set navType = 'NOTadmin' %}
{% set pageTitle = 'Dashboard tiles' + GLOBAL_TAG_TITLE_SUFFIX %}
{% set backLinkContents =  [{url:'/prototypes/molecules', text:'Back to molecules'}] %}
{% set isAdminUser = false %}

{% block content %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='column is-full is-9-desktop is-9-widescreen') %}

            {{ components.captionHeading(text='Dashboard tiles') }}

        {%- endcall %}

    {%- endcall %}

    <section class="section" id="main-content">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-3') %}

                <div class="tfs-tile tfs-tile--urgent">
                    <h2 class="govuk-heading-s tfs-tile__heading"><a href="#" class="govuk-link">Applications</a></h2>
                    <span class="tfs-tile__action">
                        {{ range(1, 10) | random }} urgent actions required
                    </span>
                    <span class="tfs-tile__progress">In progress:</span>
                    <span class="tfs-tile__number">1</span>

                </div>

            {%- endcall %}

            {% call components.bulmaColumnAny(size='column is-3') %}

                <div class="tfs-tile tfs-tile--actions">
                    <h2 class="govuk-heading-s tfs-tile__heading"><a href="#" class="govuk-link">Award set-up</a></h2>
                    <span class="tfs-tile__action">
                        {{ range(1, 10) | random }} urgent actions required
                    </span>
                    <span class="tfs-tile__progress">In progress:</span>
                    <span class="tfs-tile__number">1</span>
                </div>

            {%- endcall %}

            {% call components.bulmaColumnAny(size='column is-3') %}

                <div class="tfs-tile tfs-tile--actions">
                    <h2 class="govuk-heading-s tfs-tile__heading"><a href="#" class="govuk-link">Awards</a></h2>
                    <span class="tfs-tile__progress">In progress:</span>
                    <span class="tfs-tile__number">1</span>
                    <span class="tfs-tile__link"><a href="#" class="govuk-link">View payment schedule</a></span>
                </div>

            {%- endcall %}

        {%- endcall %}

    </section>
    <section class="section" id="secondary-controls">

        {% call components.bulmaRow() %}

            {% call components.bulmaColumnAny(size='column is-3') %}

                <div class="tfs-tile tfs-tile--plain">
                    <h2 class="govuk-heading-s tfs-tile__heading">Manage Oxford University</h2>
                    <span class="tfs-tile__link"><a href="#" class="govuk-link govuk-!-font-weight-bold">Manage team members</a></span>
                    <span class="tfs-tile__progress">As an administrator you can manage team members in your organisation.</span>
                </div>

            {%- endcall %}

        {%- endcall %}

    </section>

    {% include '../../layouts/partials/user-contact.njk' %}

{% endblock %}

{% block bodyScripts %}
    {#<script>
    </script>#}
{% endblock %}
