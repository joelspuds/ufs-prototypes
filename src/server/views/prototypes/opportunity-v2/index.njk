{% extends 'layouts/bulma-ufs.layout.njk' %}

{% set navType = 'admin' %}
{% set isAdminUser = true %}

{% set pageTitle = OPPORTUNITY_TITLE_TAG + GLOBAL_TAG_TITLE_SUFFIX %}
{% set listItemsOpportunities = [
    { text: 'Example opportunity one', url: '#' },
    { text: 'Example opportunity two', url: '#' },
    { text: 'Example opportunity three', url: '#' },
    { text: 'Example opportunity four', url: '#' },
    { text: 'Example opportunity five', url: '#' }
] %}

{% set listItemsActions = [
    { text: 'Create new opportunity', url: '/prototypes/opportunity-v2/create' }
] %}

{% block content %}

    {% call components.bulmaRow(extraClass='u-space-t30') %}
        {% call components.bulmaColumnAny(size='is-two-thirds') %}
            {{ components.captionHeading(text=OPPORTUNITY_TITLE) }}
        {%- endcall %}
    {%- endcall %}

    {% call components.bulmaRow() %}

        {% call components.bulmaColumnAny(size='is-8') %}

          {{ components.list(items=listItemsOpportunities, type='bullet')}}

        {%- endcall %}

        {% call components.bulmaColumnAny(size='is-3 is-offset-1') %}

            {{ components.list(items=listItemsActions, type='bullet')}}

        {%- endcall %}

    {%- endcall %}

{% endblock %}
