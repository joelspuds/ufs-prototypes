                <p class="govuk-body-m u-space-b20">Use a form group for a label/input combo, or a collection of related form items such as an array fo radios or checkboxes. This should be handled in Storybook ideally, but check your output.</p>

                {% call components.displayCode() %}

                    {% call components.bulmaColumns() %}

                        {% call components.bulmaColumnAny(size='is-full') %}

                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">What are your contact details?</legend>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="phone">Phone</label>
                                    <span class="govuk-hint">Enter a mobile or landline number</span>
                                    <input class="govuk-input govuk-input--width-10" id="phone" name="phone" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="email">Email</label>
                                    <span class="govuk-hint">Enter any email address where you can be contacted</span>
                                    <input class="govuk-input govuk-input--width-20" id="Email" name="email" type="text">
                                </div>

                            </fieldset>

                        {%- endcall %}

                    {%- endcall %}

                    {% call components.bulmaColumns() %}

                        {% call components.bulmaColumnAny(size='is-full') %}

                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">What is your postal address</legend>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="house">House number</label>
                                    <input class="govuk-input govuk-input--width-3" id="house" name="house" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="street">Street name</label>
                                    <input class="govuk-input govuk-input--width-20" id="street" name="street" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="town">Town or city</label>
                                    <input class="govuk-input govuk-input--width-20" id="town" name="town" type="text">
                                </div>

                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-label--s" for="postcode">Postcode</label>
                                    <input class="govuk-input govuk-input--width-5" id="postcode" name="postcode" type="text">
                                </div>

                            </fieldset>

                        {%- endcall %}

                    {%- endcall %}

                    {% call components.bulmaColumns() %}

                        {% call components.bulmaColumnAny(size='is-full') %}

                            <div class="govuk-form-group">
                                <button class="govuk-button" id="submit" name="submit">Submit</button>
                            </div>

                        {%- endcall %}

                    {%- endcall %}

                {%- endcall %}

            </section>

        {%- endcall %}

    {%- endcall %}

