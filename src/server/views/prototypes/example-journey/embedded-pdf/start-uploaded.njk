{% extends 'layouts/ufs.layout.njk' %}

{% set pageTitle = 'Case for support' %}
{% set showEmbeddedPDFScripts = true %}
{% set storedPreScore = storedPreScore if storedPreScore %}
{% set storedSpeakerNotes = storedSpeakerNotes if storedSpeakerNotes %}

{% block content %}

  {% call components.gridRow() %}

    {% call components.columnFull() %}

        {{ components.pageHeading(heading='Case for support', secondary='171 - Development of a Novel Inhibitor of Ricin')}}

    {%- endcall %}

  {%- endcall %}

    {% call components.gridRow(extraClass='u-space-b30') %}

        {% call components.columnFull() %}

            <h2 class="heading heading-medium">What is your proposed project and how does it represent excellent research?</h2>
            {% call components.hiddenText(summary='What should I include in this section?') %}
                <p>Your Case for Support should be structured as follows:</p>

                <p><strong>1.1 The idea</strong><br>
                    What is your proposed project and how does it represent excellence?</p>

                <p><strong>1.2 Importance</strong><br>
                    What is the value of this project, to whom, why should it be undertaken?</p>

                <p><strong>1.3 Timeliness</strong><br>
                    Why is now the right time for this project?</p>

                <p><strong>1.4 Approach</strong><br>
                    How do you propose to undertake the project and what methods will you use?</p>

                <p><strong>1.5 Impact</strong><br>
                    What potential impact might come about as result from this project, how might the benefit  be realised?</p>

            {%- endcall %}

            {% call components.form(action='/prototypes/example-journey/embedded-pdf/start', method='POST', name='formUploadPDF', xform=true) %}

            <div class="application-item">

                <div class="application-item__bar">
                    <span class="application-item__bar-title">Your case for support document</span>
                    <span class="application-item__char-count">Words remaining: 448</span>
                </div>

                <div class="application-item__contents">

                    {% call components.hiddenText(summary='What can I upload?', extraClass="govuk-!-margin-bottom-0 ") %}
                        <ul class="govuk-list govuk-list--bullet">
                            <li>Microsoft Word, .doc or .docx</li>
                            <li>Acrobat PDF, .pdf</li>
                            <li>Open Document text format, .odt</li>
                        </ul>
                    {%- endcall %}

                    <div class="application-item__upload u-space-b30">
                        case_for_support_novel_ricin_inhibitor_project_220919.pdf
                    </div>

                    <div class="form-group">
                        <label class="form-label visuallyhidden" for="inputUploadPDF" >Upload a file</label>
                        {#<input id="inputUploadPDF" type="file" name="inputUploadPDF" value="" style="line-height: 12px; font-size:19px; display: block; ">#}
                        {#<button class="button" style="background-color: #dee0e2; color: #000;">Choose file</button>#}
                        <a href="/prototypes/example-journey/embedded-pdf/start" class="button" style="background-color: #dee0e2; color: #000;">Remove file</a>
                    </div>

                </div>

            </div>

                <div class="application-item">

                    <div class="application-item__contents">

                        <div class="govuk-form-group govuk-!-margin-bottom-0">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend govuk-visually-hidden">Is the application complete</legend>
                                <div class="govuk-checkboxes">
                                    <div class="govuk-checkboxes__item">
                                        <input class="govuk-checkboxes__input" id="isComplete" name="applicationCompete" type="checkbox" value="yes">
                                        <label class="govuk-label govuk-checkboxes__label" for="isComplete">Mark as complete</label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>

             {{ components.button(text='Upload and continue', url='/prototypes/example-journey/embedded-pdf/view-pdf') }}

            {%- endcall %}

        {%- endcall %}

    {%- endcall %}

    {% call components.gridRow(extraClass='u-space-b30') %}

        {% call components.columnTwoThirds() %}

            <h2 class="heading-small">Choose an existing PDF</h2>

            <ul class="list-bullet">
                <li>
                    <a href="#">Example 1 (very long, large file, contains mathematical formula)</a>
                </li>
            </ul>


        {%- endcall %}

    {%- endcall %}

{% endblock %}
