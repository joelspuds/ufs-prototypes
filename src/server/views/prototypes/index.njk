{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = 'Prototypes Index' %}

{% set listItemsWIP = [
    { text: 'Layout examples', url: '/prototypes/layout-examples' },
    { text: 'GDS bits and bobs', url: '/prototypes/gds' },
    { text: 'Journeys and PoCs', url: '/prototypes/example-journey' }
] %}

  {% set listItemsFinal = [
      { text: 'Molecules ', url: '/prototypes/molecules'}
  ] %}

{% block content %}

    {{ components.pageHeading('Prototypes') }}
    {{ components.paragraph(text="Prototypes within the final column are ready  for implementation. Please consult a member of the service design team before implementing prototypes from the 'Work in progress' column.", lead='true', limitWidth=true)}}

    {% call components.gridRow() %}

        {% call components.columnHalf() %}

            {{ components.captionHeading(text='Work in progress', tag='h3', size='m') }}

            {{ components.list(items=listItemsWIP, type='bullet')}}

        {%- endcall %}

        {% call components.columnHalf() %}

            {{ components.captionHeading(text='Other', tag='h3', size='m') }}

            {{ components.list(items=listItemsFinal, type='bullet')}}

        {%- endcall %}

    {%- endcall %}

{% endblock %}
