{% extends 'layouts/ufs.layout.njk' %}

{% set pageTitle = 'Various patterns' %}

{% block content %}

    {% call components.gridRow() %}

        {% call components.columnFull() %}

            {{ components.pageHeading(heading='Various patterns') }}

        {%- endcall %}

    {%- endcall %}

    {% call components.gridRow() %}

        {% call components.columnFull() %}

            <h2 class="heading-large">Application items</h2>

            <div class="application-item govuk-clearfix">

                <a href="#" class="application-item__link">Application</a>

                <div class="application-item__left">

                    <ul class="application-item__list">
                        <li>
                            <span class="application-item__key">Status:</span>
                            <span class="application-item__value application-item__value--complete">100% Complete</span>
                        </li>
                        <li>
                            <span class="application-item__key">Deadline:</span>
