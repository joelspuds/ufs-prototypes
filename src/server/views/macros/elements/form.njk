{% macro form(action=false, method=false, class=false, multipart=false, name) %}
  <form
  {{ 'action="' + action  + '"' if action }}
  {{ 'method="' + method + '"' if method }}
  {{ 'class="' + class + '"' if class }}
  {{ ' name="' + name + '"' if name }}
  {{ 'enctype="multipart/form-data"' if multipart }}
  >
    {{ caller() }}
  </form>
{% endmacro %}
