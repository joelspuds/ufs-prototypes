{% macro formLabel(
    label='',
    labelClass='govuk-label--s',
    visuallyHidden=false,
    id=false,
    bold=false,
    hint=false,
    error=false)
%}
  {% if label %}
    <label class="govuk-label {{ labelClass }}  {{ 'govuk-!-font-weight-bold' if bold }} {{ ' govuk-visually-hidden' if visuallyHidden }}" {{ 'for="' + id + '"' if id }}>
      {{ label }}
      {% if hint %}
        <span class="govuk-hint">{{ hint }}</span>
      {% endif %}
      {% if error %}
        <span class="error-message">{{ error }}</span>
      {% endif %}
    </label>
  {% endif %}
{% endmacro %}
