{% macro button(text='Save and continue', url=false, start=false, type='submit', customName, disabled=false, customID, extraClass, value) %}
  {% set disabledCode = 'disabled="disabled" aria-disabled="true"' %}
  {% if url %}
      {% if start %}
        <a href="{{ url }}" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
          {{ text }}
          <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
          </svg>
        </a>
      {% else %}
        <a class="govuk-button {{ 'button-start' if start }} {{ extraClass if extraClass }}" href="{{ url }}" role="button" data-module="govuk-button">{{ text }}</a>
      {% endif %}
  {% else %}
    <button class="govuk-button {{ extraClass }} {{ 'govuk-button--disabled' if disabled }}" {{ 'id="' + customID + '"' if customID }} {{ 'name="' + customName + '"' if customName }} type="{{ type }}" value="{{ value }}" {{ disabledCode if disabled }} data-module="govuk-button">{{ text }}</button>
  {% endif %}
{% endmacro %}
