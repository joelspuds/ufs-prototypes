{% extends 'layouts/library.layout.njk' %}

{% set pageTitle = 'Pattern Library - Error Summary' %}

{% block content %}

  {{ components.captionHeading(
    text='Error Summary',
    tag='h2',
    size='m'
  ) }}

  {{ components.errorSummary(
    heading='Heading for the error summary',
    headingId='heading',
    description=false,
    items=[
      {
        link: '#example-error-one',
        text: 'Error message one goes here...'
      },
      {
        link: '#example-error-two',
        text: 'Error message two goes here...'
      }
    ]
  ) | prism }}

  {{ components.captionHeading(
    text='Error Summary - With description',
    tag='h2',
    size='m'
  ) }}

  {{ components.errorSummary(
    heading='Heading for the error summary',
    headingId='heading',
    description='Optional description goes here...',
    items=[
      {
        link: '#example-error-one',
        text: 'Error message one goes here...'
      },
      {
        link: '#example-error-two',
        text: 'Error message two goes here...'
      }
    ]
  ) | prism }}

{% endblock %}
