{% extends 'layouts/library.layout.njk' %}

{% set pageTitle = 'Pattern Library - Grid System' %}

{% block content %}

  {{ components.captionHeading(text='Page Width', tag='h2', size='m') }}
  {{ components.paragraph(text='The default maximum page width is 1020px, but go wider if the content requires it.') }}

  {{ components.captionHeading(text='Screen Size', tag='h2', size='m') }}
  {{ components.paragraph(text='Design for small screens first using a single column layout.') }}

  {{ components.captionHeading(text='Full Width', tag='h2', size='m') }}

  {% call components.displayCode() %}
    {% call components.gridRow() %}
      {% call components.columnFull() %}
